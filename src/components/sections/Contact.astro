---
import Form from "../ui/Form.astro";

const info = {
    location: "Puerto General San Martin, Santa Fe",
    email: "[EMAIL_ADDRESS]",
    whatsapp: "+54 9 3476-XXXXXX",
}
---

<section id="contacto" class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-6">
        <div class="bg-slate-900 rounded-[3rem] overflow-hidden shadow-2xl flex flex-col lg:flex-row">
            <div class="lg:w-2/5 p-12 bg-yellow-500 flex flex-col justify-between">
                <h2 class="font-heading text-slate-900 text-4xl font-black mb-6">Hablemos de <br/> tu proxima obra</h2>
                <p class="font-body text-slate-800 text-lg mb-12">Estamos estrategicamente ubicados en el polo industrial de santa fe para brindar respuesta inmediata</p>
                <div class="space-y-8">
                    <div class="flex items-center gap-4">
                        <div class="w-12 h-12 bg-slate-900 rounded-xl flex items-center justify-center text-yellow-500 shrink-0">
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
                        </div>
                        <div>
                            <p class="font-heading font-bold text-slate-900 uppercase text-xs tracking-widest">Ubicacion</p>
                            <p class="font-body text-slate-800 font-medium">{info.location}</p>
                        </div>
                    </div>
                    <div class="flex items-start gap-4">
                        <div class="w-12 h-12 bg-slate-900 rounded-xl flex items-center justify-center text-yellow-500 shrink-0">
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
                        </div>
                        <div>
                            <p class="font-heading font-bold text-slate-900 uppercase text-xs tracking-widest">Email Corporativo</p>
                            <p class="font-body text-slate-800 font-medium">{info.email}</p>
                        </div>
                    </div>
                </div>
                <div class="mt-12 pt-8 border-t border-slate-900/10">
                    <p class="font-heading font-bold text-slate-900 uppercase text-xs tracking-widest mb-4">WhatsApp</p>
                    <a href="https://wa.me/5493476XXXXXX" class="inline-flex items-center gap-2 text-2xl font-black text-slate-900 hover:opacity-70 transition-opacity">
                        {info.whatsapp}
                    </a>
                </div>
            </div>
            <div class="lg:w-3/5 p-12 lg:p-16">
                <Form />
            </div>
        </div>
    </div>

</section>

