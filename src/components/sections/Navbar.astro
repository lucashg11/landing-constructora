---
const navLinks = [
    {
        label: "Inicio",
        href: "/",
        ariaLabel: "Inicio",
    },
    {
        label: "Nosotros",
        href: "#nosotros",
        ariaLabel: "Nosotros",
    },
    {
        label: "Servicios",
        href: "#servicios",
        ariaLabel: "Servicios",
    },
    {
        label: "Maquinarias",
        href: "#maquinarias",
        ariaLabel: "Maquinarias",
    },
    {
        label: "Proyectos",
        href: "#proyectos",
        ariaLabel: "Proyectos",
    },
    {
        label: "Contacto",
        href: "#contacto",
        ariaLabel: "Contacto",
    },
];
---

<nav id="main-nav" class="fixed w-full z-50 transition-all duration-300 py-6 ">
  <div class="max-w-7xl mx-auto px-6 flex justify-between items-center">
    <div class="flex items-center gap-2">
      <div class="w-10 h-10 bg-yellow-500 flex items-center justify-center rounded-lg font-heading font-black text-slate-900">
        SV
      </div>
      <span class="font-heading font-bold text-2xl tracking-tighter text-white" id="nav-logo-text">
        STRALLA <span class="text-yellow-500">VIAL</span>
      </span>
    </div>

    <div class="hidden md:flex items-center gap-8">
      {navLinks.map(link => (
        <a href={link.href} class="font-body text-sm font-medium text-white/90 hover:text-yellow-500 transition-colors uppercase tracking-widest" aria-label={link.ariaLabel}>
          {link.label}
        </a>
      ))}
      <a href="tel:+5493476XXXXXX" class="bg-yellow-500 hover:bg-yellow-600 text-slate-900 hover:text-white px-5 py-2.5 rounded-full font-bold text-sm transition-all hover:scale-105 active:scale-95" aria-label="Llamar ahora">
        LLAMAR AHORA
      </a>
    </div>

    <button id="menu-toggle" class="md:hidden text-white p-2">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
      </svg>
    </button>
  </div>

  <div id="mobile-menu" class=" bg-slate-900 absolute top-full left-0 w-full border-t border-slate-800 p-6 flex flex-col gap-4 -translate-y-full opacity-0 invisible transition-all duration-300">
    {navLinks.map(link => (
      <a href={link.href} class="font-body text-lg text-white hover:text-yellow-500 border-b border-slate-800 pb-2" aria-label={link.ariaLabel}>
        {link.label}
      </a>
    ))}
  </div>
</nav>

<script>
  let cleanup: (() => void) | null = null;

  function initMenu() {
    // 1. Limpiar listeners previos si existen
    if (cleanup) {
      cleanup();
      cleanup = null;
    }

    // 2. Seleccionar elementos frescos del DOM actual
    const nav = document.getElementById('main-nav');
    const menuToggle = document.getElementById('menu-toggle');
    const mobileMenu = document.getElementById('mobile-menu');
    const links = mobileMenu?.querySelectorAll('a');

    if (!nav || !menuToggle || !mobileMenu) return;

    let isOpen = false;

    // 3. Función unificada para estilos
    const updateNavStyle = () => {
    const isScrolled = window.scrollY > 50;

    // Si está scrolleado O el menú está abierto -> fondo sólido
    if (isScrolled || isOpen) {
    nav.classList.add('bg-slate-900/90', 'backdrop-blur-md', 'shadow-xl', 'py-4');
    nav.classList.remove('py-6');
    } else {
    // En el top Y menú cerrado -> transparente
    nav.classList.remove('bg-slate-900/90', 'backdrop-blur-md', 'shadow-xl', 'py-4');
    nav.classList.add('py-6');
    }
    };

    // 4. Toggle Menú
    const toggleMenu = () => {
    isOpen = !isOpen;

    if (isOpen) {
    mobileMenu.classList.remove('-translate-y-full', 'opacity-0', 'invisible');
    mobileMenu.classList.add('translate-y-0', 'opacity-100', 'visible');
    } else {
    mobileMenu.classList.remove('translate-y-0', 'opacity-100', 'visible');
    mobileMenu.classList.add('-translate-y-full', 'opacity-0', 'invisible');
    }

    // Actualizar estilos inmediatamente al abrir/cerrar
    updateNavStyle();
    };

    // 5. Handlers
    const onScroll = () => {
    // Optimizamos: requestAnimationFrame si fuera necesario, pero para esto simple está bien
    updateNavStyle();
    };

    const onToggleClick = () => toggleMenu();

    const onLinkClick = () => {
    if (isOpen) toggleMenu();
    };

    // 6. Asignar Event Listeners
    window.addEventListener('scroll', onScroll, { passive: true });
    menuToggle.addEventListener('click', onToggleClick);
    links?.forEach(link => link.addEventListener('click', onLinkClick));

    // Ejecutar una vez al inicio para sync estado (por si recarga y ya está scrolleado)
    updateNavStyle();

    // 7. Definir limpieza para la próxima navegación
    cleanup = () => {
    window.removeEventListener('scroll', onScroll);
    menuToggle.removeEventListener('click', onToggleClick);
    links?.forEach(link => link.removeEventListener('click', onLinkClick));
    };
    }

    // Inicializar en primera carga
    initMenu();

    // Re-inicializar en cada navegación de Astro
    document.addEventListener('astro:after-swap', initMenu);
</script>