---
import { Image } from "astro:assets";
import projectVial from "../../assets/project-vial.webp";
const projects = [
  {
    title: "Repavimentación RN 11",
    client: "Dirección Nacional de Vialidad",
    location: "Santa Fe",
    tags: ["Vial", "Asfalto"],
    image: projectVial
  },
  {
    title: "Planta Industrial PGSM",
    client: "Terminal Portuaria",
    location: "Puerto Gral. San Martín",
    tags: ["Industrial", "Hormigón"],
    image: projectVial
  },
  {
    title: "Saneamiento Cuenca Sur",
    client: "Municipalidad de San Lorenzo",
    location: "San Lorenzo",
    tags: ["Hidráulica", "Ingeniería"],
    image: projectVial
  }
];
---

<section id="proyectos" class="py-24 bg-slate-900 overflow-hidden">
  <div class="max-w-7xl mx-auto px-6">
    
    <div class="flex flex-col md:flex-row md:items-end justify-between mb-16">
      <div>
        <h2 class="font-heading text-yellow-400 font-bold tracking-widest uppercase text-sm mb-4">Experiencia Comprobada</h2>
        <h3 class="text-white font-heading text-4xl md:text-5xl font-black">
          Obras que marcan <br/> <span class="text-yellow-500">la diferencia.</span>
        </h3>
      </div>
      <a href="#contacto" class="mt-6 md:mt-0 text-white font-bold border-b-2 border-yellow-500 pb-2 hover:text-yellow-500 transition-colors">
        Ver historial completo →
      </a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {projects.map((project) => (
        <div class="group relative h-[450px] rounded-3xl overflow-hidden shadow-2xl bg-slate-800">
          <Image
            src={project.image} 
            alt={project.title}
            loading="lazy" 
            class="w-full h-full object-cover opacity-70 group-hover:scale-110 group-hover:opacity-40 transition-all duration-700"
          />
          
          <div class="absolute inset-0 bg-linear-to-t from-slate-950 via-slate-950/20 to-transparent opacity-90"></div>

          <div class="absolute inset-0 p-8 flex flex-col justify-end">
            <div class="flex gap-2 mb-4">
              {project.tags.map(tag => (
                <span class="text-[10px] font-bold bg-yellow-600 text-white px-2 py-1 rounded-md uppercase tracking-tighter">
                  {tag}
                </span>
              ))}
            </div>
            
            <h4 class="text-white font-heading text-2xl font-bold mb-2 translate-y-4 group-hover:translate-y-0 transition-transform duration-300">
              {project.title}
            </h4>
            
            <div class="overflow-hidden h-0 group-hover:h-20 transition-all duration-300 opacity-0 group-hover:opacity-100">
              <p class="text-slate-300 text-sm font-body mb-1"><strong class="text-yellow-400">Cliente:</strong> {project.client}</p>
              <p class="text-slate-300 text-sm font-body"><strong class="text-yellow-400">Lugar:</strong> {project.location}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>