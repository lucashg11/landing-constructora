---
import { Image } from 'astro:assets';
import serviceVial from '../../assets/service-vial.webp';




const mainServices = [
  {
    id: 1,
    title: "Ingeniería y Obras Viales",
    desc: "Pavimentación asfáltica, hormigón, bacheo y mantenimiento integral de infraestructuras.",
    image: serviceVial,
    size: "lg" 
  },
  {
    id: 2,
    title: "Movimiento de Suelos",
    desc: "Nivelación láser, excavaciones masivas y terraplenes de alta densidad.",
    image: serviceVial,
    size: "sm"
  },
  {
    id: 3,
    title: "Alquiler de Equipos",
    desc: "Rent-Service con operadores certificados y mantenimiento en obra.",
    image: serviceVial,
    size: "sm"
  },
  {
    id: 4,
    title: "Obras Hidráulicas",
    desc: "Construcción y mantenimiento de sistemas de agua y saneamiento.",
    image: serviceVial,
    size: "lg"
  },
  {
    id: 5,
    title: "Izajes de Carga",
    desc: "Izajes de carga pesada con grúas de alta capacidad.",
    image: serviceVial,
    size: "lg"
  },
  {
    id: 6,
    title: "Transporte de Maquinaria",
    desc: "Transporte de maquinaria pesada con grúas de alta capacidad.",
    image: serviceVial,
    size: "sm"
  }   

];


---
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {mainServices.map((service) => (
        <div class={` group relative overflow-hidden rounded-3xl bg-slate-900 ${service.size === 'lg' ? 'md:col-span-2' : ''} h-[400px]`} id={`${service.id}`} title={`${service.title}`}>
          <Image 
            src={service.image} 
            alt={service.title}
            loading="lazy" 
            class="absolute inset-0 w-full h-full object-cover md:group-hover:scale-110 transition-transform duration-700"
          />
          
          <div class="absolute inset-0 bg-gradient-to from-slate-900 via-slate-900/20 to-transparent"></div>

          <div class="absolute inset-0 p-8 flex flex-col justify-end bg-slate-900/50 md:bg-slate-900/20 md:group-hover:bg-slate-900/50 transition-colors duration-300">
            <div class="transform md:group-hover:-translate-y-4 transition-transform duration-300">
              <h4 class="font-heading text-2xl md:text-3xl font-bold text-white mb-3">
                {service.title}
              </h4>
              <p class="font-body text-slate-300 max-w-md mb-6 md:opacity-0 md:group-hover:opacity-100 transition-opacity duration-300">
                {service.desc}
              </p>
              <a href={`/services#service-${service.id}`} class="flex items-center gap-2 text-vial-yellow font-bold uppercase tracking-widest text-sm bg-yellow-500 px-4 py-2 rounded-full w-fit hover:bg-yellow-600 hover:text-white transition-colors duration-300">
                Ver detalles 
                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>