---
import { Image } from 'astro:assets';
import fleetTrucks from "../../assets/fleet-trucks.webp";
const fleet = [
  {
    name: "Excavadoras sobre Orugas",
    specs: ["Peso: 22 TN", "Cuchara: 1.2 m³", "Profundidad: 6.7m"],
    image: fleetTrucks,
    category: "Movimiento de Suelos"
  },
  {
    name: "Motoniveladoras",
    specs: ["Potencia: 185 HP", "Vertedera: 3.7m", "Transmisión: Direct Drive"],
    image: fleetTrucks,
    category: "Nivelación"
  },
  {
    name: "Palas Cargadoras",
    specs: ["Capacidad: 3.0 m³", "Carga útil: 5000 kg", "Altura de descarga: 3.2m"],
    image: fleetTrucks,
    category: "Logística"
  },
  {
    name: "Rodillos Compactadores",
    specs: ["Ancho: 2.1m", "Frecuencia: 30/33 Hz", "Fuerza Centrífuga: 250 kN"],
    image: fleetTrucks,
    category: "Pavimentación"
  }
];
---


<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      {fleet.map((item) => (
        <div class="group bg-slate-50 rounded-3xl overflow-hidden border border-slate-100 hover:border-vial-yellow transition-all duration-300 shadow-sm hover:shadow-xl">
          <div class="relative h-56 overflow-hidden bg-slate-200">
            <Image 
              src={item.image} 
              alt={item.name} 
              loading="lazy"
              class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
            />
            <div class="absolute top-4 left-4">
              <span class="bg-slate-900/80 backdrop-blur-md text-white text-[10px] font-bold px-3 py-1 rounded-full uppercase tracking-widest">
                {item.category}
              </span>
            </div>
          </div>

          <div class="p-6">
            <h4 class="font-heading text-xl font-bold text-slate-900 mb-4">{item.name}</h4>
            
            <ul class="space-y-2 mb-8">
              {item.specs.map(spec => (
                <li class="flex items-center gap-2 text-sm text-slate-600 font-body italic">
                  <div class="w-1.5 h-1.5 rounded-full bg-vial-yellow"></div>
                  {spec}
                </li>
              ))}
            </ul>

            <a 
              href="#contacto" 
              class="block w-full text-center py-3 bg-white border-2 border-slate-900 text-slate-900 font-bold rounded-xl hover:bg-slate-900 hover:text-white transition-all text-sm uppercase tracking-wider"
            >
              Consultar Equipo
            </a>
          </div>
        </div>
      ))}
    </div>